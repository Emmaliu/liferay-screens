<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:liferay="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <TextView
      style="@style/label"
      android:text="@string/ratings_label" />

  <com.liferay.mobile.screens.rating.RatingScreenlet
      android:id="@+id/rating_screenlet"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      liferay:layoutId="@layout/rating_layout"
      liferay:entryId="@string/liferay_asset_id"
      liferay:offlinePolicy="REMOTE_FIRST" />

</LinearLayout>