<?xml version="1.0" encoding="utf-8"?>
<manifest
	package="com.liferay.mobile.screens.bankofwesteros"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
	<uses-permission android:name="com.liferay.mobile.screens.bankofwesteros.permission.C2D_MESSAGE"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/liferay_icon"
		android:label="@string/title"
		android:theme="@style/AppTheme">

		<activity
			android:name=".MainActivity"
			android:label="@string/title"/>

		<activity android:name=".IssuesActivity"/>
		<activity android:name=".AccountSettings"/>
		<activity
		<activity android:name=".PushActivity"/>
			android:name=".SplashActivity"
			android:noHistory="true">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".TourActivity"
			android:noHistory="true"/>

		<receiver android:name=".GCMBroadcastReceiver">
			<intent-filter>
				<action android:name="com.google.android.c2dm.intent.RECEIVE"/>
				<category android:name="com.liferay.mobile.screens.bankofwesteros"/>
			</intent-filter>
		</receiver>

	</application>

</manifest>
