<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

	<ImageView
		android:id="@+id/tour_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_gravity="center"
		android:layout_marginTop="50dp"
		android:src="@drawable/tour_girl"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/tour_description"
		android:gravity="center"
		android:padding="20dp"
		android:text="Tour Title"
		android:textAllCaps="true"
		android:textColor="@color/westeros_black"
		android:textSize="18sp"/>

	<TextView
		android:id="@+id/tour_description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:gravity="center"
		android:padding="20dp"
		android:text="Image description, sentence, long text"
		android:textColor="@color/westeros_dark_gray"
		android:textSize="16sp"/>

</RelativeLayout>