<RelativeLayout
	android:id="@+id/view"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:liferay="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="true"
	android:background="@color/westeros_background_gray"
	android:orientation="vertical">


	<LinearLayout android:id="@+id/background"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="vertical">

		<ImageView
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:layout_marginBottom="20dp"
			android:layout_marginTop="20dp"
			android:background="@color/westeros_dark_gray"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="FINAL TOUR TITLE"
			android:textColor="@color/westeros_black"
			android:textSize="20sp"/>

	</LinearLayout>

	<LinearLayout android:elevation="8dp"
		android:id="@+id/sign_in_button"
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:layout_above="@+id/sign_up_button"
		android:background="@android:color/white"
		android:orientation="vertical">

		<TextView
			android:id="@+id/sign_in_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="20dp"
			android:text="SIGN IN"
			android:textColor="@color/westeros_red"
			android:textSize="25dp"/>

		<com.liferay.mobile.screens.auth.login.LoginScreenlet
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			liferay:layoutId="@layout/login_material"/>

	</LinearLayout>

	<LinearLayout android:elevation="16dp"
		android:id="@+id/sign_up_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@color/westeros_red"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="20dp"
			android:text="SIGN UP"
			android:textColor="@android:color/white"
			android:textSize="25dp"/>

		<com.liferay.mobile.screens.auth.signup.SignUpScreenlet
			android:id="@+id/signup_screenlet"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="40dp"
			android:visibility="gone"
			liferay:layout="@layout/sign_up_material"/>

	</LinearLayout>


</RelativeLayout>