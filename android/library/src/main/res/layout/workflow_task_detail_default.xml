<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.thingscreenlet.screens.views.detail.WorkflowTaskDetailView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <ProgressBar
            android:id="@+id/workflow_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/workflow_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/linear_workflow_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/frame_layout_assignee_avatar"
            android:layout_toStartOf="@id/frame_layout_assignee_avatar"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/workflow_asset_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8sp"
                android:layout_marginRight="8sp"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                tools:text="The Future of Java and How It Affects Java and Liferay Developers"
                />

            <TextView
                android:id="@+id/workflow_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                tools:text="Review â€¢ Blogs Entry"
                />

            <TextView
                android:id="@+id/workflow_date_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                tools:text="01/10/18"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                >

                <FrameLayout
                    android:id="@+id/workflow_is_pending"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/default_workflow_status_rounded"
                    />

                <TextView
                    android:id="@+id/workflow_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="Pending"
                    />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame_layout_assignee_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            >

            <com.liferay.mobile.screens.thingscreenlet.screens.ThingScreenlet
                android:id="@+id/workflow_assignee_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:scenario="portrait"
                />

            <ProgressBar
                android:id="@+id/workflow_image_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear_workflow_details"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/workflow_linear_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/workflow_due_date"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/workflow_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="12sp"
                    tools:text="28/12/18"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/workflow_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                />

        </LinearLayout>

    </RelativeLayout>

</com.liferay.mobile.screens.thingscreenlet.screens.views.detail.WorkflowTaskDetailView>
