<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.defaultviews.rating.ThumbsRatingView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="2"
    android:padding="10dp"
    android:orientation="horizontal"
    style="@style/default_screenlet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

  <LinearLayout
    android:orientation="vertical"
    android:layout_weight="1"
    android:paddingRight="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageButton
      android:id="@+id/positiveRatingButton"
      android:src="@drawable/default_thumb_up_outline"
      android:background="?attr/selectableItemBackgroundBorderless"
      tools:background=""
      android:scaleType="fitXY"
      android:layout_width="80dp"
      android:layout_height="80dp" />

    <TextView
      android:id="@+id/positiveRatingCount"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="Total: 7" />

  </LinearLayout>

  <LinearLayout
    android:orientation="vertical"
    android:layout_weight="1"
    android:paddingLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageButton
      android:id="@+id/negativeRatingButton"
      android:src="@drawable/default_thumb_down_outline"
      tools:src="@drawable/default_thumb_down"
      android:background="?attr/selectableItemBackgroundBorderless"
      tools:background=""
      android:scaleType="fitXY"
      android:layout_width="80dp"
      android:layout_height="80dp" />

    <TextView
      android:id="@+id/negativeRatingCount"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="Total: 9" />

  </LinearLayout>
</com.liferay.mobile.screens.viewsets.defaultviews.rating.ThumbsRatingView>