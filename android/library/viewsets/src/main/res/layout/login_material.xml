<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.material.auth.login.LoginMaterialView
	style="@style/default_screenlet"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:liferay="http://schemas.android.com/apk/res-auto">


	<LinearLayout style="@style/material_row">

		<ImageView
			android:id="@+id/drawable_login"
			style="@style/material_icon"
			android:src="@drawable/ic_email"/>

		<EditText
			android:id="@+id/login"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="8dp"
			android:hint="@string/email_address"
			android:text="test@liferay.com"/>

	</LinearLayout>

	<LinearLayout style="@style/material_row">

		<ImageView
			android:id="@+id/drawable_password"
			style="@style/material_icon"
			android:src="@drawable/ic_https"/>

		<EditText
			android:id="@+id/password"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="8dp"
			android:hint="@string/password"
			android:inputType="textPassword"
			android:text="test"/>

	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		android:orientation="horizontal">

		<Button
			android:id="@+id/login_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/sign_in"/>

		<com.liferay.mobile.screens.base.ModalProgressBar
			android:id="@+id/progress_bar"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:theme="@style/white_theme"
			android:layout_gravity="center_vertical|left"
			android:visibility="invisible"
			liferay:actionViewId="@id/login_button"/>

	</LinearLayout>
</com.liferay.mobile.screens.viewsets.material.auth.login.LoginMaterialView>