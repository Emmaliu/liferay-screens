<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.defaultviews.auth.login.LoginDefaultView
	style="@style/default_screenlet"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:theme="@style/default_theme">

	<EditText
		android:id="@+id/login"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:drawableLeft="@drawable/default_mail_icon"
		android:hint="@string/email_address"
		android:inputType="text"
		android:text="test@liferay.com"/>

	<EditText
		android:id="@+id/password"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:drawableLeft="@drawable/default_lock_icon"
		android:hint="@string/password"
		android:inputType="textPassword"
		android:text="test"/>

	<Button
		android:id="@+id/login_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/sign_in"/>
</com.liferay.mobile.screens.viewsets.defaultviews.auth.login.LoginDefaultView>