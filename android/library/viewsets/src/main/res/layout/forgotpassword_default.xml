<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.defaultviews.auth.forgotpassword.ForgotPasswordDefaultView
	style="@style/default_screenlet"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<EditText
		android:id="@+id/login"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:drawableLeft="@drawable/default_user_icon"
		android:hint="@string/screen_name"
		android:text="test@liferay.com"/>

	<Button
		android:id="@+id/request_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/request_password"/>
</com.liferay.mobile.screens.viewsets.defaultviews.auth.forgotpassword.ForgotPasswordDefaultView>